<div class="row">
  <div class="col-12">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2 class="fw-bold">
        <i class="bi bi-cart3 me-2"></i>Carrinho de Compras
      </h2>
      <a href="/products" class="btn btn-outline-primary">
        <i class="bi bi-arrow-left me-2"></i>Continuar Comprando
      </a>
    </div>
  </div>
</div>

{{#if cartItems.length}}
<div class="row g-4">
  <!-- Lista de Produtos -->
  <div class="col-lg-8">
    {{#each cartItems}}
    <div class="card mb-3 shadow-sm border-0">
      <div class="card-body">
        <div class="row align-items-center">
          <div class="col-md-3 col-sm-4">
            <img src="/{{this.product.image}}" class="img-fluid rounded" alt="{{this.product.name}}"
              style="max-height: 150px; object-fit: cover;">
          </div>
          <div class="col-md-4 col-sm-8 mt-3 mt-sm-0">
            <h5 class="card-title mb-2">{{this.product.name}}</h5>
            <p class="text-muted mb-1">
              <small>{{this.product.description}}</small>
            </p>
            <p class="mb-0 fw-bold text-primary fs-5">R$ {{formatPrice this.product.price}}</p>
          </div>
          <div class="col-md-3 col-sm-6 mt-3 mt-md-0">
            <label class="form-label small text-muted">Quantidade</label>
            <div class="input-group input-group-lg">
              <button class="btn btn-outline-secondary" type="button"
                onclick="decrementItem('{{this.id}}'); return false;">
                <i class="bi bi-dash"></i>
              </button>
              <input type="text" class="form-control text-center fw-bold" value="{{this.quantity}}" readonly>
              <button class="btn btn-outline-secondary" type="button"
                onclick="incrementItem('{{this.id}}'); return false;">
                <i class="bi bi-plus"></i>
              </button>
            </div>
          </div>
          <div class="col-md-2 col-sm-6 mt-3 mt-md-0 text-end">
            <p class="text-muted small mb-1">Subtotal</p>
            <p class="fw-bold fs-5 mb-2">R$ {{formatPrice (multiply this.product.price this.quantity)}}</p>
            <button class="btn btn-sm btn-outline-danger" onclick="removeItem('{{this.id}}'); return false;">
              <i class="bi bi-trash"></i>
            </button>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>

  <!-- Resumo do Pedido -->
  <div class="col-lg-4">
    <div class="card shadow-sm border-0 sticky-top" style="top: 20px;">
      <div class="card-header bg-primary text-white">
        <h5 class="mb-0">
          <i class="bi bi-clipboard-check me-2"></i>Resumo do Pedido
        </h5>
      </div>
      <div class="card-body">
        <div class="d-flex justify-content-between mb-2">
          <span class="text-muted">Subtotal</span>
          <span class="fw-semibold">R$ {{formatPrice totalPrice}}</span>
        </div>
        <div class="d-flex justify-content-between mb-2">
          <span class="text-muted">Frete</span>
          <span class="fw-semibold text-success">Grátis</span>
        </div>
        <hr>
        <div class="d-flex justify-content-between mb-3">
          <span class="fw-bold fs-5">Total</span>
          <span class="fw-bold text-primary fs-4">R$ {{formatPrice totalPrice}}</span>
        </div>
        <button class="btn btn-primary btn-lg w-100 mb-2">
          <i class="bi bi-credit-card me-2"></i>Finalizar Compra
        </button>
        <button class="btn btn-outline-secondary w-100">
          <i class="bi bi-arrow-left me-2"></i>Continuar Comprando
        </button>
      </div>
      <div class="card-footer bg-light">
        <div class="d-flex align-items-center text-muted small">
          <i class="bi bi-shield-check me-2 fs-5 text-success"></i>
          <span>Compra 100% segura e protegida</span>
        </div>
      </div>
    </div>
  </div>
</div>
{{else}}
<div class="row">
  <div class="col-12">
    <div class="card shadow-sm border-0 text-center py-5">
      <div class="card-body">
        <i class="bi bi-cart-x display-1 text-muted mb-4"></i>
        <h3 class="mb-3">Seu carrinho está vazio</h3>
        <p class="text-muted mb-4">Adicione produtos ao carrinho para continuar comprando</p>
        <a href="/products" class="btn btn-primary btn-lg">
          <i class="bi bi-shop me-2"></i>Ver Produtos
        </a>
      </div>
    </div>
  </div>
</div>
{{/if}}